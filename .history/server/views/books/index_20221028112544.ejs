<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Favorite Books List </h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/books/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
      <br>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <!-- ADD DESCRIPTION ROW-->
              <th class="text-center">Description</th>
              <th class="text-center">Price</th>
              <th class="text-center">Author</th>
              <th class="text-center">Genre</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
          </thead>
          <tbody>
            <!-- Template Row -->
            <!-- ADD DESCRIPTION ROW-->
            <% for (let count = 0; count < books.length; count++) { %>
            <tr>
              <td><%= books[count].Title %></td>

              <td class="text-center"><%= books[count].Description %></td>
              <td class="text-center">$<%= books[count].Price %></td>
              <td class="text-center"><%= books[count].Author %></td>
              <td class="text-center"><%= books[count].Genre %></td>

              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the EDIT BUTTON HERE -->
                <!-- ------------------------ -->
                <a href="/books/edit/<%= books[count]._id %>" class="btn btn-primary btn-sm edit"><i
                    class="fas fa-edit fa-sm"></i>Edit</a>
              </td>
              <td class="text-center">
                <!-- ------------------------ -->
                <!-- ADD the DELETE BUTTON HERE -->
                <!-- ------------------------ -->
                <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger btn-sm delete"><i
                    class="fas fa-trash-alt fa-sm"></i>Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>